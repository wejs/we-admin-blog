{{#if model.record.id}}
<h1 class="page-header">Editar artigo #{{model.record.id}}</h1>
{{else}}
<h1 class="page-header">Criar</h1>
{{/if}}

<form {{action "save" model.record on="submit"}}>
  <fieldset>
    <div class="form-group">
      <label>Título*</label>
      {{input value=model.record.title class="form-control" placeholder="Título do artigo" required="required"}}
    </div>
    <div class="form-group">
      <label>Sobre:</label>
      {{textarea value=model.record.about class="form-control"}}
    </div>
    <div class="form-group">
      <label>Texto:</label>
      {{tinymce-editor value=model.record.body}}
    </div>
  </fieldset>
  <fieldset>
    <div class="form-group">
      <label>Imagem de destaque:</label>
      {{image-uploader value=model.record.featuredImage}}
    </div>
    <div class="form-group">
      <label>Galeria de imagens:</label>
      {{image-uploader value=model.record.images multiple=true}}
    </div>
  </fieldset>
  <fieldset>
    <div class="form-group">
      <label>Categoria:</label>
      {{#power-select
        search=(action "searchCategoryTerms")
        selected=model.record.category
        onchange=(action (mut model.record.category))
        as |term|
      }}
        {{term}}
      {{/power-select}}
    </div>
    <div class="form-group">
      <label>Tags:</label>
      {{#power-select-multiple
        search=(action "searchTagsTerms")
        selected=model.record.tags
        onchange=(action (mut model.record.tags))
        as |term|
      }}
        {{term}}
      {{/power-select-multiple}}
    </div>
  </fieldset>
  <fieldset>
    <div class="form-group">
      <label>
        {{input type="checkbox" checked=model.record.published}} Published?
      </label>
    </div>
  </fieldset>

  <div>
    <button class="btn btn-primary">
      <i class="fa fa-save"></i>
      Salvar
    </button>
    <button {{action 'goTo' 'articles.index'}} type="button" class="btn btn-default">
      <i class="fa fa-step-backward"></i>
      Artigos
    </button>
  </div>
</form>