{{#if model.record.id}}
<h1 class="page-header">Editar menu #{{model.record.id}}</h1>
{{else}}
<h1 class="page-header">Criar</h1>
{{/if}}

<form {{action "save" model.record on="submit"}}>
  <fieldset>
    <div class="form-group">
      <label>Nome*</label>
      {{input value=model.record.name class="form-control" placeholder="Nome do menu" required="required"}}
    </div>
    <div class="form-group">
      <label>Class:</label>
      {{textarea value=model.record.class class="form-control"}}
    </div>
  </fieldset>
  <div>
    <button class="btn btn-primary">
      <i class="fa fa-save"></i>
      Salvar
    </button>
    <button {{action 'goTo' 'menus.index'}} type="button" class="btn btn-default">
      <i class="fa fa-step-backward"></i>
      Menus
    </button>
  </div>
</form>