<div class="content-box-large">
  <div class="panel-heading">
    <h1>Meus dados</h1>
  </div>
  <div class="panel-body">
    <form {{action "save" model.user on="submit"}}>
      <fieldset>
        <div class="form-group">
          <label>Username</label>
          {{input value=model.user.username class="form-control" placeholder="Nome do usuário" required="required"}}
        </div>
        <div class="form-group">
          <label>DisplayName</label>
          {{input value=model.user.displayName class="form-control" placeholder="Nome de exibição" required="required"}}
        </div>
        <div class="form-group">
          <label>Email</label>
          {{input value=model.user.email class="form-control" placeholder="Email" disabled=settings.notIsAdmin}}
        </div>
        <div class="form-group">
          <label>Biografia / sobre</label>
          {{textarea value=model.user.biography class="form-control" rows="4"}}
        </div>

        <div class="form-group">
          <label>Language</label>
          {{#power-select
            options=settings.data.locales
            selected=model.user.language
            searchEnabled=false
            onchange=(action (mut model.user.language) )
            as |locale|
          }}
            {{locale}}
          {{/power-select}}
        </div>
      </fieldset>
      <div>
        <button class="btn btn-default">
          <i class="glyphicon glyphicon-floppy-save"></i>
          Salvar
        </button>
      </div>
    </form>
  </div>
</div>