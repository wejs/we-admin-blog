{{#if model.record.id}}
<h1 class="page-header">Editar url alternativa #{{model.record.id}}</h1>
{{else}}
<h1 class="page-header">Criar url alternativa</h1>
{{/if}}

<form {{action "save" model.record on="submit"}}>
  <fieldset>
    <div class="form-group">
      <label>Alias*</label>
      {{input value=model.record.alias class="form-control" placeholder="Url alternativa" required="required"}}
    </div>
    <div class="form-group">
      <label>Target*</label>
      {{input value=model.record.target class="form-control" placeholder="Url original" required="required"}}
    </div>
    <div class="form-group">
      <label>Locale</label>
      {{input value=model.record.locale class="form-control" placeholder="Locale"}}
    </div>
  </fieldset>
  <div>
    <button class="btn btn-primary">
      <i class="fa fa-save"></i>
      Salvar
    </button>
    <button {{action 'goTo' 'url-alia.index'}} type="button" class="btn btn-default">
      <i class="fa fa-step-backward"></i>
      Cancelar
    </button>
  </div>
</form>